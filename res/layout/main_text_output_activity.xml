<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	<ScrollView android:id="@+id/scrollView1"
				android:layout_height="wrap_content" android:text="TextView"
			android:scrollbarStyle="outsideInset" android:layout_width="fill_parent"
		android:layout_weight="1">
		<TextView android:scrollbars="vertical" android:id="@+id/main_text_view"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:text="" android:scrollbarStyle="outsideInset"/>
	</ScrollView>
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1">
		<Button android:layout_height="wrap_content" android:text="@string/back" android:layout_width="wrap_content" android:id="@+id/back_button" android:layout_gravity="center_horizontal"></Button>
		<Button android:layout_height="wrap_content" android:text="@string/previous_page" android:id="@+id/previous_page_button" android:layout_width="fill_parent" android:layout_weight="2"></Button>
		<Button android:layout_height="wrap_content" android:text="@string/next_page" android:id="@+id/next_page_button" android:layout_width="fill_parent" android:layout_weight="2"></Button>
	</LinearLayout>
</LinearLayout>
